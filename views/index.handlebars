
<h1>Eat - Da - Burgers!</h1>

<div class="row">

    <div class="col-lg-4">

        <h2>Burgers to be Devoured</h2>

        <ul>
            {{#each burger}}
                {{#unless devoured}}

                    {{> burgers/burg-block }}
                
                {{/unless}}
                 
            {{/each}}
        </ul>

    </div>

    <div class="col-lg-4" id="mid-block">
        <h2>Add a Burger</h2>

        <form class="create-burg" action="/" type="POST">

            <div class="form-group">
                <label for="bg">Burger Name:</label>
                <input type="text" id="bg" name="burger_name">
            </div>

            <div class="form-group" >
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Devour Me!
            </div>

            <button class="btn btn-primary" id="newburg" type="submit">Add Burger</button>

        </form>

    </div>


    <div class="col-lg-4">

        <h2>Burgers Devoured</h2>

        <ul>
            {{#each burger}}
                {{#if devoured}}
                    {{> burgers/burg-block }}
                {{/if}}
            {{/each}}
        </ul>

    </div>

</div>

